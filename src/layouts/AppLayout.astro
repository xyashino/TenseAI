---
import { DesktopSidebar } from "@/components/layout/desktop-sidebar";
import { MobileLayout } from "@/components/layout/mobile-layout";
import { Toaster } from "@/components/ui/sonner";
import { queryClient } from "@/lib/query-client";
import { QueryClientProvider } from "@tanstack/react-query";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "TenseAI" } = Astro.props;

const session = Astro.locals.user;

if (!session) {
  return Astro.redirect("/login");
}

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background">
    <QueryClientProvider client={queryClient}>
      <div class="flex h-screen overflow-hidden">
        <aside class="hidden lg:flex">
          <DesktopSidebar currentPath={currentPath} client:load />
        </aside>

        <div class="flex flex-1 flex-col overflow-hidden min-h-0">
          <div class="lg:hidden">
            <MobileLayout currentPath={currentPath} client:load />
          </div>
          <main class="flex-1 overflow-y-auto p-6 pb-24 lg:p-8 lg:pb-8 min-h-0">
            <div class="mx-auto max-w-4xl">
              <slot />
            </div>
          </main>
        </div>
      </div>
      <Toaster client:load />
    </QueryClientProvider>
  </body>
</html>
