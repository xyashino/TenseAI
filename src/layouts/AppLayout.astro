---
import "../styles/global.css";
import { QueryClientProvider } from "@tanstack/react-query";
import { queryClient } from "@/lib/query-client";
import { ProfileRepository } from "@/server/repositories/profile.repository";
import { DesktopSidebar } from "@/components/layout/DesktopSidebar";
import { MobileLayout } from "@/components/layout/MobileLayout";
import type { LayoutUser } from "@/types";

interface Props {
  title?: string;
}

const { title = "TenseAI" } = Astro.props;

// Get authenticated user from locals (set by middleware)
const supabase = Astro.locals.supabase;
const session = Astro.locals.user;

if (!session) {
  return Astro.redirect("/login");
}

// Fetch user profile
let user: LayoutUser;
try {
  const profileRepository = new ProfileRepository(supabase);
  const profile = await profileRepository.getProfileById(session.id);
  if (profile && session.email) {
    user = {
      id: profile.user_id,
      email: session.email,
      name: profile.name,
    };
  } else {
    throw new Error("Profile or session email not found");
  }
} catch {
  // Fallback to session data
  user = {
    id: session.id,
    email: session.email ?? "unknown@example.com",
    name: null,
  };
}

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background">
    <QueryClientProvider client={queryClient}>
      <div class="flex h-screen overflow-hidden">
        <!-- Desktop Sidebar -->
        <aside class="hidden lg:flex">
          <DesktopSidebar user={user} currentPath={currentPath} client:load />
        </aside>

        <!-- Main Content Area -->
        <div class="flex flex-1 flex-col overflow-hidden">
          <!-- Mobile Header -->
          <div class="lg:hidden">
            <MobileLayout user={user} currentPath={currentPath} client:load />
          </div>

          <!-- Page Content -->
          <main class="flex-1 overflow-y-auto p-6 lg:p-8">
            <slot />
          </main>
        </div>
      </div>
    </QueryClientProvider>
  </body>
</html>
