---
import { AppLogo } from "@/components/layout/app-logo";
import BaseLayout from "@/layouts/base-layout.astro";
import { NavigationRoutes } from "@/shared/enums/navigation";

const session = Astro.locals.user;
const isAuthenticated = !!session;
---

<BaseLayout title="404 - Not Found - TenseAI" className="flex items-center justify-center min-h-screen">
  <div class="flex w-full max-w-md flex-col gap-6 items-center px-4">
    <AppLogo />
    <div class="flex flex-col items-center text-center w-full">
      <h1 class="text-4xl font-bold mb-4">404</h1>
      <h2 class="text-2xl font-semibold mb-4">Page Not Found</h2>
      <p class="text-muted-foreground mb-6 max-w-md">The page you're looking for doesn't exist or has been moved.</p>
      <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
        {
          isAuthenticated ? (
            <>
              <a
                href={NavigationRoutes.THEORY}
                class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90 transition-colors"
              >
                Go to Theory
              </a>
              <a
                href={NavigationRoutes.HOME}
                class="inline-flex items-center justify-center rounded-md border bg-background shadow-xs hover:bg-accent hover:text-accent-foreground dark:bg-input/30 dark:border-input dark:hover:bg-input/50 px-4 py-2 text-sm font-medium transition-colors"
              >
                Go to Home
              </a>
            </>
          ) : (
            <>
              <a
                href={NavigationRoutes.HOME}
                class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90 transition-colors"
              >
                Go to Home
              </a>
              <a
                href={NavigationRoutes.LOGIN}
                class="inline-flex items-center justify-center rounded-md border bg-background shadow-xs hover:bg-accent hover:text-accent-foreground dark:bg-input/30 dark:border-input dark:hover:bg-input/50 px-4 py-2 text-sm font-medium transition-colors"
              >
                Login
              </a>
            </>
          )
        }
      </div>
    </div>
  </div>
</BaseLayout>
